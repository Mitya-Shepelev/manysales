# ==================================================
# ManySales - Переменные окружения для Dokploy
# ==================================================
# ИНСТРУКЦИЯ:
# 1. Скопируйте эти переменные в настройки Environment вашего приложения в Dokploy
# 2. ЗАМЕНИТЕ все значения-заглушки на реальные секреты
# 3. НИКОГДА не коммитьте файлы с реальными секретами в Git!
# ==================================================

# ========== ОСНОВНЫЕ НАСТРОЙКИ ==========
APP_NAME=ManySales
APP_ENV=production
APP_DEBUG=false
# ВАЖНО: Сгенерируйте новый ключ командой: php artisan key:generate
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_URL=https://your-domain.com
APP_LOG_LEVEL=error

# ========== БАЗА ДАННЫХ (PostgreSQL) ==========
DB_CONNECTION=pgsql
# Получите Internal Host из настроек PostgreSQL в Dokploy
DB_HOST=your-postgres-internal-host
DB_PORT=5432
DB_DATABASE=manysales
DB_USERNAME=your_db_username
# ВАЖНО: Используйте СИЛЬНЫЙ пароль (минимум 16 символов, буквы+цифры+символы)
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD_HERE

# ========== REDIS (ОБЯЗАТЕЛЬНО для production!) ==========
# Получите Internal Host из настроек Redis в Dokploy
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_DRIVER=redis

REDIS_HOST=your-redis-internal-host
# ВАЖНО: Используйте СИЛЬНЫЙ пароль для Redis
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# ========== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ==========
BROADCAST_DRIVER=log
SESSION_LIFETIME=120

# ========== МИГРАЦИИ ==========
# Установите true только для первого деплоя, потом верните false
MIGRATE_ON_START=false

# ========== ЛИЦЕНЗИЯ И АДМИНИСТРАТОР ==========
# Получите у поставщика ПО
PURCHASE_CODE=your-purchase-code-here
BUYER_USERNAME=your-username-here
SOFTWARE_ID=your-software-id-here
SOFTWARE_VERSION=15.7
ADMIN_NAME=YourName
# base64 закодированный email админа
ADMIN_IDENTIFIER=base64_encoded_admin_email_here

# YooKassa (только для production с SSL сертификатом)
YOOKASSA_DISABLE_SSL_VERIFY=false

# ========== AWS S3 (опционально) ==========
# Раскомментируйте если используете S3 для хранения файлов
# AWS_ENDPOINT=
# AWS_ACCESS_KEY_ID=your-aws-key-here
# AWS_SECRET_ACCESS_KEY=your-aws-secret-here
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=your-bucket-name

# ========== PUSHER (опционально) ==========
# Раскомментируйте если используете Pusher для real-time функций
# PUSHER_APP_ID=your-pusher-id
# PUSHER_APP_KEY=your-pusher-key
# PUSHER_APP_SECRET=your-pusher-secret
# PUSHER_APP_CLUSTER=mt1
